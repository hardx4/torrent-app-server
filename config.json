{
    "appName": "torrent-app-server",
    "appVersion": "1.0.0",
    
    "server": {
        "port": 5002,
        "WinPath": ".\\torrents",
        "LinuxPath": "./torrents",
        "OSuse": "win",    
        "hostsWhitelist": [
            "http://localhost:5002"            
        ]
    },

	"logging": {
        "files": {
            "level": "info",
            "directory": "logs",
            "flushInterval": 5
        },
        "console": {
            "level": "info",
            "colors": true
        }
    },

    "bdconfig": {
        "host": "127.0.0.1",
        "port": 3306,
        "user": "root",
        "password": "password",
        "database": "database_name"
    }
}